.mid

  / shuffle button
  %button.btn.btn-default.btn-lg.fadeInDown{"ng-click" => "fetch()"}
    %i.fa.fa-2x.fa-random.go{"ng-show" => "showStuff"}
    %i.fa.fa-2x.fa-cog.fa-spin.go{"ng-show" => "!showStuff"}

  /title
  %h1.center.animated.fadeInDown{"ng-show" => "showStuff"}
    {{ showName }}

  / episode
  %h3.light.animated.fadeInLeft#title-line{"ng-show" => "showStuff"}
    Season
    %strong
      {{ seasonNum }}
    Episode
    %strong
      {{ episodeNum }}
    \-
    %strong
      {{ episodeTitle }}

  / poster
  .screen.animated.fadeInRight.pull-right{"ng-show" => "showStuff"}
    %img.img-responsive{src: "{{ posterUrl }}"}

  / text
  %p.animated.fadeInUp#episode-blurb{"ng-show" => "showStuff"}
    {{ overview }}