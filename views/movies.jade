extends ./layout.jade

block content
  .response(ng-show="res")
    h3
      | How about
      strong.orange  {{res.movie.title}}
      | ?
    .row
      .col-sm-8
        p.text-justify
          | {{res.movie.overview}} [
          span.darkgreen
            | {{res.movie.year}}
          | ]
      .col-sm-4
        img.img-responsive.center-block.cover(src="{{res.movie.images.poster.thumb}}")
